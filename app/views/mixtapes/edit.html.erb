<div class='container my-5'>
  <div class='col-12 col-md-10 col-lg-8 col-xl-6'>

    <h1 class='mb-0'>Editing mixtape</h1>
    <p class='mb-4 text-secondary'><%= link_to @mixtape.title, @mixtape %></p>

    <%= render 'form', mixtape: @mixtape %>

    <div class='mt-5 pt-5' id='danger-zone'>
      <h1 class='text-danger fw-lighter'>Danger Zone™</h1>

      <%= button_to 'Destroy this mixtape',
                    @mixtape,
                    class: 'btn btn-outline-danger',
                    method: :delete,
                    data:  {
                      turbo_method:  :delete,
                      turbo_confirm: 'Are you sure you’re sure? There is NO UNDO.'
                    } %>
    </div>

  </div>
</div>
