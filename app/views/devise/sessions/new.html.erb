<%= tag.div class: wrapper_row_classes do %>
  <%= tag.div class: wrapper_columns_classes do %>

  <h2 class='display-4'>Sign in</h2>

  <%= form_for resource, as: resource_name, url: session_path(resource_name) do |form| %>
    <%= render 'forms/labeled_email_field',
               form: form,
               name: :email,
               autofocus: true %>

    <div class='mb-3'>
      <%= render 'forms/labeled_password_field',
                 form: form,
                 name: :password,
                 autocomplete: 'current-password' %>
    </div>

    <div class='form-check form-switch'>
      <%= form.check_box :remember_me, checked: true,     class: 'form-check-input' %>
      <%= form.label     :remember_me, 'Stay signed in?', class: 'form-check-label' %>
    </div>

    <%= render 'forms/submit_button', form: form, label: 'Sign in' %>
  <% end %>

  <%= render 'devise/shared/links' %>

  <% end %>
<% end %>
