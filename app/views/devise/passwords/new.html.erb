<%= tag.div class: wrapper_row_classes do %>
  <%= tag.div class: wrapper_columns_classes do %>

  <h2 class='display-4'>Forgot your password?</h2>

  <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |form| %>
    <%= render 'forms/labeled_email_field', form: form, name: :email %>

    <%= render 'forms/submit_button', form: form, label: 'Send reset password instructions' %>
  <% end %>

  <%= render 'devise/shared/links' %>

  <% end %>
<% end %>
