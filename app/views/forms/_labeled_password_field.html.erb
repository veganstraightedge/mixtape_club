<% autocomplete ||= nil %>
<% autofocus    ||= false %>
<% label        ||= nil %>
<% note         ||= nil %>
<% placeholder  ||= nil %>

<div class='form-floating mb-3'>
  <%= form.password_field name,
                          autocomplete: (autocomplete || 'new-password'),
                          autofocus:    autofocus,
                          placeholder:  (placeholder || 'mickey fickey firecracker soap on a rope'),
                          class:        'form-control form-control-lg' %>

  <%= form.label          name, label %>

  <% if note.present? %>
    <p class='form-text mb-3'>
      <%= note %>
    </p>
  <% end %>
</div>
