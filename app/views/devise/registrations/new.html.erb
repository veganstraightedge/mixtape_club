<div class='container'>
  <div class='row'>
    <h1 class='display-3'>Sign up</h1>

    <div class='col-12 col-md-10 col-lg-8 col-xl-6'>
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |form| %>
        <%= render 'forms/errors', resource: resource %>

        <%= render 'forms/labeled_email_field',
                    form: form,
                    name: :email,
                    placeholder: 'user@example.com',
                    autofocus: true %>

        <%= render 'forms/labeled_text_field',
                    form: form,
                    name: :username,
                    placeholder: 'username',
                    autocomplete: 'username' %>

        <div class='row'>
          <div class='col-12 col-md-6'>
            <%= render 'forms/labeled_password_field',
                        form: form,
                        name: :password %>
          </div>

          <div class='col-12 col-md-6'>
            <%= render 'forms/labeled_password_field',
                       form: form,
                       name: :password_confirmation,
                       label: 'Confirm your password' %>
          </div>
        </div>

        <%= render 'forms/password_note' %>

        <%= render 'forms/submit_button', form: form, label: 'Sign up' %>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>

  </div>
</div>
